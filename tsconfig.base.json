{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jatra/common/interfaces": ["libs/common/interfaces/src/index.ts"],
      "@jatra/common/types": ["libs/common/types/src/index.ts"],
      "@jatra/common/dtos": ["libs/common/dtos/src/index.ts"],
      "@jatra/common/constants": ["libs/common/constants/src/index.ts"],
      "@jatra/common/utils": ["libs/common/utils/src/index.ts"],
      "@jatra/database/postgres": ["libs/database/postgres/src/index.ts"],
      "@jatra/database/redis": ["libs/database/redis/src/index.ts"],
      "@jatra/messaging/rabbitmq": ["libs/messaging/rabbitmq/src/index.ts"],
      "@jatra/telemetry/opentelemetry": ["libs/telemetry/opentelemetry/src/index.ts"],
      "@jatra/sms": ["libs/sms/src/index.ts"],
      "@jatra/qr-code": ["libs/qr-code/src/index.ts"],
      "@jatra/testing/helpers": ["libs/testing/helpers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
