# Docker Compose Environment Configuration
# Copy this to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=jatra_user
POSTGRES_PASSWORD=jatra_password
POSTGRES_DB=jatra_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL="postgresql://jatra_user:jatra_password@localhost:5432/jatra_db?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=jatra_redis_pass

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=jatra_user
RABBITMQ_PASSWORD=jatra_password
RABBITMQ_VHOST=jatra

# Application Configuration
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# SSLCommerz (Payment Gateway)
SSLCOMMERZ_STORE_ID=your-store-id
SSLCOMMERZ_STORE_PASSWORD=your-store-password
SSLCOMMERZ_IS_SANDBOX=true

# SMS Provider Configuration (Choose one)
SMS_PROVIDER=SSL_WIRELESS # or BULKSMS_BD or TWILIO
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_SENDER_ID=Jatra
