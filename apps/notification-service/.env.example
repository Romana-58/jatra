# Server Configuration
PORT=3007
NODE_ENV=development

# Database
DATABASE_URL="postgresql://jatra_user:jatra_password@localhost:5432/jatra_db?schema=public"

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_NOTIFICATION_EXCHANGE=notifications
RABBITMQ_NOTIFICATION_QUEUE=notification_queue

# Email Configuration (Optional - leave SMTP_USER and SMTP_PASS empty to disable email sending)
# For Gmail: Enable 2FA and create an App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Jatra Railway <noreply@jatra-railway.com>

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
