# Service Configuration
PORT=3009
NODE_ENV=development

# Database
DATABASE_URL=postgresql://jatra_user:jatra_password@localhost:5432/jatra_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=jatra_redis_pass
REDIS_DB=1

# Cache TTL (in seconds)
CACHE_TTL_POPULAR_ROUTES=3600
CACHE_TTL_STATIONS=7200
CACHE_TTL_SEARCH_RESULTS=300
CACHE_TTL_AUTOCOMPLETE=1800

# Schedule Service URL (for fetching fresh data)
SCHEDULE_SERVICE_URL=http://localhost:3002

# API Documentation
API_TITLE=Jatra Search Service
API_DESCRIPTION=Optimized search service with Redis caching
API_VERSION=1.0
