{
  "name": "@jatra/auth-service",
  "version": "0.0.1",
  "description": "Jatra Railway Auth & User Service",
  "main": "dist/main.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
